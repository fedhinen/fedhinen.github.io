---
import { useTranslations } from '../i18n/utils';

interface Props {
    lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-12 md:py-20">
    <h1 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        {t('hero.greeting')}
    </h1>
    <h2 class="text-xl md:text-2xl text-primary mb-6 font-medium">
        {t('hero.role')}
    </h2>
    <p class="text-gray-600 max-w-2xl text-lg leading-relaxed">
        {t('hero.description')}
    </p>
    
    <div class="mt-8 flex gap-4">
        <a href="mailto:victor.adrian.ruiz.espindola@gmail.com" class="px-4 py-2 border border-gray-300 rounded hover:border-primary hover:text-primary transition-colors text-sm">
            Email
        </a>
        <a href="https://github.com/fedhinen" target="_blank" rel="noopener noreferrer" class="px-4 py-2 border border-gray-300 rounded hover:border-primary hover:text-primary transition-colors text-sm">
            GitHub
        </a>
        <a href="/cv.pdf" target="_blank" rel="noopener noreferrer" class="px-4 py-2 bg-primary text-white font-bold rounded hover:bg-blue-700 transition-colors text-sm">
            CV
        </a>
    </div>
</section>
